<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <ul>
      <% messages.forEach((message) => { %>
      <li>
        <p>Author: <%= message.user %></p>
        <p>Date: <%= message.added %></p>
        <p>Message: <%= message.text %></p>
      </li>
      <% }); %>
    </ul>
  </body>
</html>
